{
  "name": "w3.scss",
  "version": "1.0.0",
  "description": "SASS version of W3.CSS",
  "author": "inbasir",
  "license": "MIT",
  "keywords": [
    "css-framework",
    "css",
    "sass",
    "scss"
  ],
  "homepage": "https://github.com/inbasir/w3scss#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inbasir/w3scss.git"
  },
  "bugs": {
    "url": "https://github.com/inbasir/w3scss/issues"
  },
  "dependencies": {
    "sass": "^1.32.8"
  },
  "devDependencies": {
    "clean-css": "^5.1.0",
    "clean-css-cli": "^5.2.0",
    "node-sass": "^5.0.0"
  },
  "scripts": {
    "watch:sass": "node-sass sass/ -o css/ --source-map true --output-style expanded --indent-type tab --indent-width 1 -w",
    "compile:css": "node-sass sass/ -o css/ --source-map true --output-style expanded --indent-type tab --indent-width 1",
    "minify:css": "cleancss css/*.css !css/*min.css -o css/ --batch --batch-suffix .min -O 1 -f breakWith=lf --source-map"
  }
}
